@page "/"
@using BusinessLogic.Models
@using Portal.UI.Services
@inject AuthState AuthState
@inject NavigationManager Navigation

<PageTitle>Placement Tracker</PageTitle>

@if (!AuthState.IsAuthenticated)
{
    <div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div style="text-align: center; color: white;">
            <h1 style="font-size: 3rem; margin-bottom: 1rem;">🎓 Placement Tracker</h1>
            <p style="font-size: 1.2rem; margin-bottom: 2rem;">Your Gateway to Career Success</p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <NavLink href="/login" style="background: white; color: #667eea; padding: 1rem 2rem; border-radius: 6px; text-decoration: none; font-weight: 600; display: inline-block;">Login</NavLink>
                <NavLink href="/register" style="background: rgba(255,255,255,0.2); color: white; padding: 1rem 2rem; border-radius: 6px; text-decoration: none; font-weight: 600; border: 2px solid white; display: inline-block;">Register</NavLink>
            </div>
        </div>
    </div>
}
else
{
    @if (AuthState.UserRole == BusinessLogic.Models.UserRole.Admin)
    {
        <RedirectComponent Url="/dashboard" />
    }
    else
    {
        <RedirectComponent Url="/student-dashboard" />
    }
}

@code {
    public class RedirectComponent : ComponentBase
    {
        [Parameter]
        public string? Url { get; set; }

        [Inject]
        private NavigationManager? NavManager { get; set; }

        protected override void OnInitialized()
        {
            if (!string.IsNullOrEmpty(Url) && NavManager != null)
            {
                NavManager.NavigateTo(Url, replace: true);
            }
        }
    }
}
