@page "/"
@using BusinessLogic
@inject DataProcessor Processor

<PageTitle>Placement Tracker - Dashboard</PageTitle>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1>Placement Tracking Dashboard</h1>
        <p>@Processor.GetGreeting("Administrator")</p>
    </div>

    <!-- Key Statistics -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Students</h3>
            <div class="value">1,240</div>
            <div class="subtitle">Enrolled in program</div>
        </div>
        <div class="stat-card success">
            <h3>Placed Students</h3>
            <div class="value">856</div>
            <div class="subtitle">69% placement rate</div>
        </div>
        <div class="stat-card warning">
            <h3>Pending</h3>
            <div class="value">384</div>
            <div class="subtitle">Awaiting placements</div>
        </div>
        <div class="stat-card">
            <h3>Active Companies</h3>
            <div class="value">42</div>
            <div class="subtitle">Recruiting partners</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div style="margin: 2rem 0;">
        <h2>Quick Actions</h2>
        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
            <button class="btn btn-primary">
                + Add New Student
            </button>
            <button class="btn btn-secondary">
                + Register Company
            </button>
            <button class="btn btn-secondary">
                Generate Report
            </button>
            <button class="btn btn-secondary">
                View Analytics
